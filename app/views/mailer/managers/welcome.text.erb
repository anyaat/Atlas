<%= translate("mail.welcome.#{@type}.intro", context: @context&.label) %>

<%= translate("mail.welcome.#{@type}.purpose") %>
<% translate("mail.welcome.#{@type}.purposes").each do |purpose| %>
* <%= @context ? purpose.gsub('%{context}', @context.label) : purpose %>
<% end %>

<%= render 'mailer/events/card', event: @context, timestamp: :created_at, actions: false if @context.is_a?(Event) %>

<%= message translate('mail.common.about'), :text %>

<%= translate('mail.common.actions') %>
<%= '=' * translate('mail.common.actions').length %>
<%= translate("mail.welcome.#{@type}.call_to_action") %>
<%= translate("mail.welcome.#{@type}.action") %> - <%= @action_link %>

<%= message translate('mail.common.alert'), :text, :alert %>
