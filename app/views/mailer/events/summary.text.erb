<%= translate('mail.event_summary.intro', event: "*#{@event.label}*") %>


<%= render 'mailer/events/card', event: @event, timestamp: :start_date, actions: false %>


<% if @status.present? %>
<%= translate("mail.event_summary.status.title.#{@status}") %>
<%= '=' * translate("mail.event_summary.status.title.#{@status}").length %>
<%= translate("mail.event_summary.status.call_to_action.#{@status}", duration: distance_of_time_in_words(Time.now, @event.updated_at)) %>
<%= translate('mail.event_summary.status.reason', frequency: distance_of_time_in_words(Time.now, Expirable::date_for(:expire)), duration: distance_of_time_in_words(Time.now, @event.expires_at)) %>

<%= translate('mail.event_summary.status.action') %> - <%= @edit_event_link %>

<% end %>

<%= translate('mail.event_summary.registrations.title') %>
<%= '=' * translate('mail.event_summary.registrations.title').length %>
<%= translate('mail.event_summary.registrations.description', date: (@event.summary_email_sent_at || @event.created_at).to_s(:short), count: @registrations.count) %>

<% if @registrations.present? %>
<% @registrations.each do |registration| %>
 - <%= registration.name %> - <%= registration.email %>
   <%= registration.created_at.to_s(:long) %>
   <%= registration.comment.present? ? registration.comment : translate('mail.event_summary.registrations.listing.no_comment') %>

<% end %>
<% end %>
<%= translate('mail.event_summary.registrations.action') %> - <%= @view_registrations_link %>


<%= message translate('mail.common.about'), :text %>

<%= message translate('mail.common.alert'), :text, :alert %>