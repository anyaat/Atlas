
.item
  .right.floated.content data-tooltip=Registration.human_attribute_name(:starting_at)
    .ui.horizontal.label = registration.starting_at.to_s(:month_and_day)
  .right.floated.content = registration.created_at.to_s(:short)
  = model_icon Registration
  .content
    - if policy(registration.event).manage?
      div <strong>#{registration.label}</strong> - <em>#{registration.email}</em>
      small class=('faded' unless registration.comment.present?)
        = registration.comment || translate('cms.messages.no_comment')
    - else
      div = registration.label
